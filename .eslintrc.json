{
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "extends": ["wix-editor/node", "eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-unused-vars": 0,
    "no-console": 0,
    "indent": [0, 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": [0, "never"]
  }
}
