{
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "wix-editor/node"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "require-atomic-updates": 0,
    "no-prototype-builtins": 0,
    "strict": 0,
    "no-unused-vars": 0,
    "import/no-extraneous-dependencies": 0,
    "no-return-assign": 0,
    "array-callback-return": 0,
    "no-shadow": 0,
    "no-throw-literal": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "arrow-parens": 0,
    "no-console": 0,
    "indent": [0, 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", {"avoidEscape": true}],
    "semi": [0, "never"]
  },
  "overrides": [
    {
      "files": ["*-test.js", "*.spec.js"],
      "rules": {
        "no-eval": "off"
      }
    }
  ]
}
